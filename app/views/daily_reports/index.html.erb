<p id="notice"><%= notice %></p>

<h1>Daily Reports</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Day</th>
      <th>Confirmed</th>
      <th>Deaths</th>
      <th>Recovery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_reports.each do |daily_report| %>
      <tr>
        <td><%= daily_report.country %></td>
        <td><%= daily_report.day %></td>
        <td><%= daily_report.confirmed %></td>
        <td><%= daily_report.deaths %></td>
        <td><%= daily_report.recovery %></td>
        <td><%= link_to 'Show', daily_report %></td>
        <td><%= link_to 'Edit', edit_daily_report_path(daily_report) %></td>
        <td><%= link_to 'Destroy', daily_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Report', new_daily_report_path %>
